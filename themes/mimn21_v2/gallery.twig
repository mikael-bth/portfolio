{% include 'incl/header.twig' %}

<body>

{% include 'incl/nav.twig' %}

<div class="gallery">
    {{ content }}
    {% for image in meta["Image"] %}
        <div class="pic-container">
            <a href="{{ image.url }}" target="_blank">
            <picture>
            <source media="(max-width: 768px)" srcset="{{ image.url }}?w=768&h=768&crop-to-fit">
            <source media="(min-width: 769px)" srcset="{{ image.url }}?w=500&h=500&crop-to-fit">
            <img src="{{ image.url }}" class="max-width" alt="{{ image.alt }}">
            </picture>
            </a>
        </div>
    {% endfor %}
</div>
<div class="video-container">
    <iframe src="{{ meta["Video"] }}" title="YouTube video player" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

{% include 'incl/footer.twig' %}

</body>
</html>
